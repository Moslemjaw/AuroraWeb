# ============================================
# AURORA FLOWERS - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================
# SERVER CONFIGURATION
# ============================================

# Port for the server (default: 5000)
PORT=5000

# Node environment: development | production
NODE_ENV=development

# ============================================
# DATABASE
# ============================================

# MongoDB connection string
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/aurora-flowers

# ============================================
# AUTHENTICATION
# ============================================

# Admin dashboard password
ADMIN_PASSWORD=your-secure-admin-password

# Session secret key (use a long random string)
SESSION_SECRET=your-super-secret-session-key-change-this

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Variables prefixed with VITE_ are accessible in the frontend

# API base URL (for production, set to your backend URL)
# Leave empty for same-origin requests
VITE_API_BASE_URL=

# Website name
VITE_SITE_NAME=Aurora Flowers

# Contact information
VITE_CONTACT_EMAIL=auroraflowers.kw@gmail.com
VITE_CONTACT_PHONE=+965 51544913
VITE_WHATSAPP_NUMBER=96551544913

# Social media links
VITE_INSTAGRAM_URL=https://www.instagram.com/auroraflowers.kw
VITE_TIKTOK_URL=https://www.tiktok.com/@auroraflowers.kw

# Currency settings
VITE_CURRENCY_CODE=KWD
VITE_CURRENCY_SYMBOL=K.D.
